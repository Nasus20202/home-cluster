{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "timezone": "Europe/Warsaw",
  "labels": ["dependencies"],
  "prConcurrentLimit": 25,
  "prHourlyLimit": 5,
  "commitMessagePrefix": "chore:",
  "semanticCommits": "enabled",
  "dependencyDashboard": true,
  "automergeType": "pr",
  "automergeStrategy": "rebase",
  "platformAutomerge": false,
  "ignoreTests": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    },
    {
      "matchDatasources": ["kubernetes"],
      "matchPackageNames": ["lscr.io/linuxserver/qbittorrent"],
      "allowedVersions": "!/^20\\.04\\./",
      "description": "Skip Ubuntu-style version tags like 20.04.x for qBittorrent"
    }
  ],
  "kubernetes": {
    "managerFilePatterns": ["/apps/.+\\.ya?ml$/"]
  },
  "argocd": {
    "managerFilePatterns": ["/apps/argocd/.+\\.ya?ml$/"]
  },
  "helm-values": {
    "managerFilePatterns": ["/apps/.+values\\.ya?ml$/"]
  }
}
